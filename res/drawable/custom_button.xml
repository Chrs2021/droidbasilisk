<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#aaaaaa"
                android:endColor="#afafaf"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#555555" /> <!-- "#ffd30d" -->
            <corners
                android:radius="4dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#bbaaaa"
                android:startColor="#bbaaaa"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#555555" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#d8d7d6"
                android:startColor="#f8f7f6"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#555555" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
