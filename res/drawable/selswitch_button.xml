<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#999999"
                android:startColor="#aaaaaa"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#bbbbbb"
                android:startColor="#dddddd"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#888888"
                android:startColor="#999999"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#333333" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <margin
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
        <text
            	android:textColor="#FF333333"
            />                
        
    </item>
</selector>

